<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextViewSingleLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">true</item>
    </style>
    <!--Submit Button style common to all modules-->
    <style name="TextViewSingleLine.SubmitWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/dimen_50dp</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_margin">@dimen/dimen_14dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/dimen_14dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorSplash</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_15dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_15dp</item>
        <item name="android:background">@color/editTextBackground</item>
        <item name="android:padding">@dimen/dimen_15dp</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <style name="Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:padding">@dimen/dimen_15dp</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_63dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_care_career</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_toolbar_title</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BackArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_back_arrow</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="EditTextProfileSetup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/editTextBackground</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/txt_normal</item>
    </style>

    <style name="TextViewTitleProfileSetup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="fontPath">@string/font_source_san_pro_semi_bold</item>
    </style>

    <style name="TextViewBodyProfileSetup">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/editTextBackground</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/txt_normal</item>
    </style>

    <style name="IconProfileSetup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
    </style>

    <style name="TvMyProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_15dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_15dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dimen_15dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="fontPath">@string/font_source_san_pro_semi_bold</item>
    </style>

    <style name="TvUpload">
        <item name="android:layout_marginLeft">@dimen/dimen_16dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_16dp</item>
        <item name="android:background">@drawable/bg_upload_photo</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/dimen_18dp</item>
        <item name="android:paddingRight">@dimen/dimen_18dp</item>
        <item name="android:paddingTop">@dimen/dimen_15dp</item>
        <item name="android:paddingBottom">@dimen/dimen_15dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/txt_normal</item>
        <item name="fontPath">@string/font_source_san_pro_semi_bold</item>
    </style>


</resources>
