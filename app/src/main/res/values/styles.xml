<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewSingleLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">true</item>
    </style>
    <!--Submit Button style common to all modules-->
    <style name="TextViewSingleLine.SubmitWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/dimen_50dp</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_margin">@dimen/dimen_14dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/dimen_14dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FullScreenDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorWhite</item>
    </style>

    <style name="CareCareerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorStatusBar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:layout_marginLeft">@dimen/et_left_margin</item>
        <item name="android:layout_marginRight">@dimen/et_right_margin</item>
        <item name="android:background">@color/register_edittext_background</item>
        <item name="android:paddingLeft">@dimen/dimen_15dp</item>
        <item name="android:textColor">@color/editTextColor</item>
        <item name="android:textColorHint">@color/editTextColor</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/editTextColor</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_marginRight">@dimen/et_right_margin</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:background">@drawable/register_and_login</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
    </style>


    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/toolbar_title_sixe</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <!--<item name="fontName">@string/font_avenir_black</item>-->
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BackArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_back_arrow</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


</resources>
