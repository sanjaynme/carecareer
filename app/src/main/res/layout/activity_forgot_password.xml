<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?actionBarSize"
    tools:context="au.com.carecareers.android.loginModule.forgotPassword.ForgotPasswordActivity">


    <include
        android:id="@+id/forgot_password_toolbar"
        layout="@layout/layout_toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/submit_view_forgot_password"
        android:layout_below="@+id/forgot_password_toolbar"
        android:background="@color/colorWhite">

        <au.com.carecareers.android.customViews.CapitalizedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_forgot_email"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:gravity="center_horizontal"
            android:text="@string/tv_forgot_email" />

        <EditText
            android:id="@+id/et_forgot_email"
            style="@style/EditText"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:hint="@string/hint_email_example"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_15sp" />


    </RelativeLayout>

    <Button
        android:id="@+id/submit_view_forgot_password"
        style="@style/Button"
        fontPath="@string/font_source_san_pro_bold"
        android:layout_alignParentBottom="true"
        android:text="@string/tv_submit" />

</RelativeLayout>
