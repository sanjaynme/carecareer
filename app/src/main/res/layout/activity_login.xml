<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStatusBar"
    android:minHeight="?actionBarSize"
    tools:context="au.com.carecareers.android.loginModule.login.LoginActivity">


    <include
        android:id="@+id/login_toolbar"
        layout="@layout/layout_toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_login"
        android:layout_below="@+id/login_toolbar"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_173px"
            android:layout_marginTop="@dimen/dimen_150px"
            android:contentDescription="@null"
            android:src="@drawable/ic_logo" />

        <EditText
            android:id="@+id/et_username"
            style="@style/RegisterEditText"
            android:layout_below="@+id/iv_logo"
            android:layout_marginBottom="@dimen/edittext_bottom_margin"
            android:drawableLeft="@drawable/ic_logo"
            android:drawablePadding="@dimen/dimen_10dp"
            android:drawableStart="@drawable/ic_logo"
            android:hint="@string/username"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/dimen_15sp" />

        <RelativeLayout
            android:id="@+id/rv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_username"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/et_password"
                style="@style/RegisterEditText"
                android:layout_marginBottom="@dimen/edittext_bottom_margin"
                android:drawableLeft="@drawable/ic_logo"
                android:drawablePadding="@dimen/dimen_10dp"
                android:drawableStart="@drawable/ic_logo"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textSize="@dimen/dimen_15sp" />

            <ImageButton
                android:id="@+id/btn_show_hide_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/et_password"
                android:layout_alignRight="@id/et_password"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/et_password"
                android:layout_toRightOf="@+id/et_password"
                android:contentDescription="@null" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_password"
            android:layout_marginBottom="@dimen/dimen_198px"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:text="@string/forgot_password"
            android:textColor="@color/light_blue_A400" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        style="@style/Button"
        android:layout_alignParentBottom="true"
        android:text="@string/login" />

</RelativeLayout>
