<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="au.com.carecareers.android.loginModule.login.LoginActivity">

    <include
        android:id="@+id/login_toolbar"
        layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_login"
        android:layout_below="@+id/login_toolbar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_85dp"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_50dp"
                android:contentDescription="@null"
                android:src="@drawable/logo_splash" />

            <EditText
                android:id="@+id/et_username"
                style="@style/EditText"
                android:layout_below="@+id/iv_logo"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="@dimen/dimen_10dp"
                android:drawableStart="@drawable/ic_user"
                android:hint="@string/et_username"
                android:inputType="textEmailAddress" />

            <RelativeLayout
                android:id="@+id/rv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_username">

                <EditText
                    android:id="@+id/et_password"
                    style="@style/EditText"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:hint="@string/et_password"
                    android:inputType="textPassword"
                    android:paddingEnd="@dimen/dimen_45dp"
                    android:paddingRight="@dimen/dimen_45dp" />

                <ImageButton
                    android:id="@+id/btn_show_hide_login_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/et_password"
                    android:layout_alignRight="@id/et_password"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:padding="@dimen/dimen_10dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_password"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_15dp"
                android:text="@string/et_forgot_password"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/txt_14sp" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_login"
        style="@style/Button"
        fontPath="@string/font_sourcesanpro_bold"
        android:layout_alignParentBottom="true"
        android:text="@string/tv_login" />
</RelativeLayout>
