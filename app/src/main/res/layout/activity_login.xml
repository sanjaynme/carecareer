<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="au.com.carecareers.android.loginModule.login.LoginActivity">

    <include
        android:id="@+id/login_toolbar"
        layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_login"
        android:layout_below="@+id/login_toolbar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dimen_50dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_logo" />

            <EditText
                android:id="@+id/et_username"
                style="@style/EditText"
                android:layout_below="@+id/iv_logo"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:drawableLeft="@drawable/ic_logo"
                android:drawableStart="@drawable/ic_logo"
                android:hint="@string/et_username"
                android:inputType="textEmailAddress" />

            <RelativeLayout
                android:id="@+id/rv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_username">

                <EditText
                    android:id="@+id/et_password"
                    style="@style/EditText"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:drawableLeft="@drawable/ic_logo"
                    android:drawableStart="@drawable/ic_logo"
                    android:hint="@string/et_password"
                    android:inputType="textPassword" />

                <ImageButton
                    android:id="@+id/btn_show_hide_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/et_password"
                    android:layout_alignRight="@id/et_password"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_white_eye" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_password"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:text="@string/et_forgot_password"
                android:textColor="@color/colorBlack" />

        </RelativeLayout>

    </ScrollView>

    <au.com.carecareers.android.customViews.SubmitView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:is_submit="true"
        app:text_submit="@string/tv_login" />

</RelativeLayout>
