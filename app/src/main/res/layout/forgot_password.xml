<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStatusBar"
    android:minHeight="?actionBarSize"
    tools:context="au.com.carecareers.android.loginModule.login.LoginActivity">


    <include
        android:id="@+id/login_toolbar"
        layout="@layout/layout_toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_login"
        android:layout_below="@+id/login_toolbar"
        android:background="@color/colorWhite">

        <au.com.carecareers.android.customViews.CapitalizedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_username"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:gravity="center_horizontal"
            android:text="@string/forgot_email" />

        <EditText
            android:id="@+id/et_username"
            style="@style/EditText"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/edittext_bottom_margin"
            android:hint="@string/email_example"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorStatusBar"
            android:textSize="@dimen/dimen_15sp" />


    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        style="@style/Button"
        android:layout_alignParentBottom="true"
        android:text="@string/submit"
        android:textAllCaps="false" />

</RelativeLayout>
