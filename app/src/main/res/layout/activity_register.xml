<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <include
        android:id="@+id/sign_up_toolbar"
        layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/submit_view_registeration"
        android:layout_below="@+id/sign_up_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_firstname"
                style="@style/EditText"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_45dp"
                android:hint="@string/hint_first_name"
                android:inputType="textPersonName|textCapWords" />

            <EditText
                android:id="@+id/et_lastname"
                style="@style/EditText"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:hint="@string/hint_last_name"
                android:inputType="textPersonName|textCapWords" />

            <EditText
                android:id="@+id/et_email"
                style="@style/EditText"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_30dp">

                <EditText
                    android:id="@+id/et_sign_up_password"
                    style="@style/EditText"
                    android:hint="@string/hint_sign_up_password"
                    android:inputType="textPassword"
                    android:paddingEnd="@dimen/dimen_40dp"
                    android:paddingRight="@dimen/dimen_40dp" />

                <ImageButton
                    android:id="@+id/btn_show_hide_register_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/et_sign_up_password"
                    android:layout_alignRight="@id/et_sign_up_password"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:padding="@dimen/dimen_10dp" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/dimen_15dp"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:background="@color/editTextBackground"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_state"
                    style="@style/Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/spinner_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical|end"
                    android:visibility="visible" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_terms_and_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_45dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_35dp"
                android:lineSpacingExtra="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_15dp"
                android:text="@string/tv_terms_conditions"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/txt_15sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submit_view_registeration"
        style="@style/Button"
        fontPath="@string/font_sourcesanpro_bold"
        android:layout_alignParentBottom="true"
        android:text="@string/tv_register" />
</RelativeLayout>