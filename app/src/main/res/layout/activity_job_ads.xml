<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_job_ads_toolbar_search"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/iv_back_arrow"
            style="@style/BackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null" />


        <EditText
            android:id="@+id/et_search"
            style="@style/EllipsizeEditText"
            android:layout_width="match_parent"
            android:layout_height="35.5dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="50dp"
            android:background="@color/colorWhite"
            android:cursorVisible="false"
            android:drawableLeft="@drawable/ic_search_unselected"
            android:drawablePadding="@dimen/dimen_20dp"
            android:drawableStart="@drawable/ic_search_unselected"
            android:inputType="text"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_results"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_job_ads_toolbar_search"
        android:background="@color/colorPrimaryDark"
        android:minHeight="@dimen/dimen_40dp">

        <TextView
            android:id="@+id/tv_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:text="Results:"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_15sp" />


        <TextView
            android:id="@+id/tv_save_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_70dp"
            android:layout_marginRight="@dimen/dimen_70dp"
            android:text="Save Search"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_15sp" />

        <TextView
            android:id="@+id/tv_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:text="Sort"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_results">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_job_ads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_job_ads" />

    </RelativeLayout>


</RelativeLayout>