<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rl_jobAds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp">

        <TextView
            android:id="@+id/tv_item_company_name"
            style="@style/TvJobDetails"
            tools:text="Company name" />

        <ImageView
            android:id="@+id/iv_item_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_company_name"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_splash" />

        <TextView
            android:id="@+id/tv_item_profession"
            style="@style/TvJobDetails"
            android:layout_below="@+id/iv_item_background"
            tools:text="Profession" />

        <TextView
            android:id="@+id/tv_item_posted_date"
            style="@style/TvJobDetails"
            android:layout_below="@+id/tv_item_profession"
            android:layout_marginBottom="@dimen/dimen_20dp"
            tools:text="Date posted" />

        <TextView
            android:id="@+id/tv_item_work_type"
            style="@style/TvJobDetails"
            android:layout_below="@+id/tv_item_posted_date"
            tools:text="Work Type" />

        <TextView
            android:id="@+id/tv_item_location"
            style="@style/TvJobDetails"
            android:layout_below="@+id/tv_item_work_type"
            tools:text="Location" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5dp"
            android:layout_below="@+id/tv_item_location"
            android:background="@color/colorHint" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view">

            <ImageView
                android:id="@+id/iv_item_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:contentDescription="@null"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_star_unselected" />

            <ImageView
                android:id="@+id/iv_item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_toEndOf="@+id/iv_item_save"
                android:layout_toRightOf="@+id/iv_item_save"
                android:contentDescription="@null"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_star_unselected" />

            <Button
                android:id="@+id/btn_job_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:layout_toEndOf="@+id/iv_item_share"
                android:layout_toRightOf="@+id/iv_item_share"
                android:background="@drawable/btn_job_search"
                android:text="@string/tv_view_details"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/txt_15sp"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>